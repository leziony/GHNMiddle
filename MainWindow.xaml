<Window x:Class="GHNMiddle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GHNMiddle"
        Closing="Window_Closing"
        mc:Ignorable="d"
        Title="Program Liczbowy" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Button_GA" Content="Logowanie do Systemu" HorizontalAlignment="Center" Click="ButtonGA_Click" Margin="0,57,0,0" VerticalAlignment="Top" Height="45" Width="168"/>
        <Button x:Name="Button_CA" Content="Logowanie administratora" HorizontalAlignment="Center" Click="ButtonCA_Click" Margin="0,279,0,0" VerticalAlignment="Top" Height="45" Width="168" IsEnabled="True"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pl-pl" Text="Witamy w kalulatorze kwot GHN"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pl-pl" Text="Dostęp dla administratorów"/></TextBlock>

    </Grid>
</Window>
